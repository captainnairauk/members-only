<h1>Members Only Posts</h1>

<ul>
  <% @posts.each do |post| %>
    <li>
      <h2><%= post.title %></h2>
      <p><%= post.body %></p>
      <% if user_signed_in? %>
        <p>Author: <%= post.user.username%></p>
      <% else %>
        <p>Author: <%= link_to 'Sign in to find out', new_user_session_path %></p>
      <% end %>
    </li>
  <% end %> 
</ul>
